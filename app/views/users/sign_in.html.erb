<div class="mx-auto md:w-1/3 w-full">
  <h1 class="font-bold text-4xl text-green-400" style="text-shadow: 2px 2px 2px #ff0000;">Sign in</h1>
  <div class="bg-gradient-to-br from-yellow-200 via-pink-500 to-purple-400 shadow-xl rounded px-8 pt-6 pb-8 mb-4 mt-4">
    <%= form_for :user, url: session_users_path do |f| %>
      <% if flash[:alert] %>
        <div class="bg-yellow-100 border border-orange-500 text-orange-700 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold">Oopsie!</strong>
          <span class="block sm:inline"><%= flash[:alert] %></span>
          <marquee>ðŸš¨ðŸš¨ðŸš¨</marquee>
        </div>
      <% end %>
      <div class="mb-4">
        <%= f.label :username, class: "block text-indigo-800 text-sm font-bold mb-2" %>
        <%= f.text_field :username, value: "user", class: "shadow appearance-none border rounded w-full py-2 px-3 text-purple-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-6">
        <%= f.label :password, class: "block text-indigo-800 text-sm font-bold mb-2" %>
        <%= f.password_field :password, value: "qwerty", class: "shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-purple-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="flex items-center justify-between">
        <%= f.submit "Log Me In!", class: "bg-red-500 hover:bg-red-700 text-white cursor-pointer font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>
</div>
