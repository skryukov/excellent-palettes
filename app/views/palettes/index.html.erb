<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-lime-200 mb-5 text-pink-700 font-comic-sans text-xl border-4 border border-pink-700 text-center" id="notice"><%= notice %></p>
  <% end %>

  <div id="palettes" class="my-8 min-w-full gap-8 flex flex-wrap">
    <% @palettes.each do |palette| %>
      <%= render palette %>
    <% end %>
  </div>
</div>
